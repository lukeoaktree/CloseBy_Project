<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#83a5f9"> <!-- Set background color -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="309dp"
        android:layout_height="200dp"
        android:layout_marginTop="76dp"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/closebylogo" />

    <LinearLayout
        android:id="@+id/joinForm"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/joinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Neighborhood Code"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/neighborhoodCodeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6-character code"
            android:maxLength="6"
            android:inputType="text"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/joinButton"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#4471ed"
            android:padding="12dp"
            android:text="Join"
            android:textColor="#ffffff" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
